<!-- map.wxml -->
<view class='Container'> 
  <map 
    id="map" 
    longitude="{{longitude}}" 
    latitude="{{latitude}}"
    scale="14"
    label="当前定位"
    controls="{{controls}}" 
    bindcontroltap="controltap" 
    markers="{{markers}}" 
    bindmarkertap="markertap" 
    polyline="{{polyline}}" 
    bindregionchange="regionchange" 
    show-location
    class='MapStatus'>
  </map>
  <view hover-class='CurrentLocationHover' class='CurrentLocation' bindtap="_getCurrentLocation">
    <image src='../../resources/location.png' alt='Gets the current position'></image>  
  </view>
</view> 